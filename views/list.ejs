<%- include("header")  -%>                  <!-- //by using this we can make different pages with the same design. -->
 
        <div class="box" id="heading">
            <h1><%= listtitle %></h1>
        </div>
        <div class="box">

            <% newlistitems.forEach(function(item){ %>
                <form action="/delete" method="post">
                    <div class="item">
                        <input type="checkbox" name="checkbox" value="<%=item._id %>" onchange="this.form.submit()">
                        <p><%=item.name%></p>
                    </div>
                    <input type="hidden" name="listname" value="<%=listtitle%>"></input>
                </form>
            <% }) %>
            <form class="item" action="/", method="post">
                <input type="text" name="event" placeholder="next todo list item" autocomplete="off">
                <button type="submit" name="list" value=<%= listtitle %>>+</botton>
            </form>
        </div>

<%- include("footer") -%>
